# Конфигурация WooCommerce API
WOOCOMMERCE_URL=https://your-woocommerce-site.com
WOOCOMMERCE_KEY=your_consumer_key
WOOCOMMERCE_SECRET=your_consumer_secret

# Конфигурация WordPress API (необходимо для работы с WordPress-инструментами)
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_PASSWORD=your_wordpress_password

# Настройки MCP-сервера
SERVER_NAME=woocommerce-mcp-server
SERVER_VERSION=1.0.0
SERVER_DESCRIPTION=MCP-сервер для управления магазином WooCommerce

# Настройки логирования
LOG_LEVEL=info # error, warn, info, verbose, debug, silly
LOG_FILE_PATH=./logs/server.log
LOG_TO_CONSOLE=true

# Кэширование (опционально)
ENABLE_CACHE=true
CACHE_TTL=600 # время жизни кэша в секундах

# Ограничение скорости запросов (опционально)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60 # период в секундах

# Прокси (опционально)
USE_PROXY=false
PROXY_URL=http://your-proxy-url:port
PROXY_USERNAME=proxy_username
PROXY_PASSWORD=proxy_password

# Расширенные настройки (опционально)
REQUEST_TIMEOUT=30000 # таймаут запросов в миллисекундах
MAX_CONCURRENT_REQUESTS=5 # максимальное количество одновременных запросов