# WooCommerce API конфигурация
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_KEY=your_consumer_key
WOOCOMMERCE_SECRET=your_consumer_secret

# WordPress API конфигурация (опционально, для статей и SEO)
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_PASSWORD=your_wordpress_password

# Настройки сервера
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Настройки Redis для кэширования и очередей (опционально)
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# Настройки безопасности для вебхуков
WEBHOOK_SECRET=your-webhook-secret-key

# Настройки Task Master для интеграции
TASK_MASTER_URL=http://localhost:4000
TASK_MASTER_API_KEY=your-task-master-api-key

# Настройки кэширования
CACHE_TTL=300                # Время жизни кэша в секундах
PRODUCT_CACHE_TTL=600        # Кэш товаров
ORDER_CACHE_TTL=120          # Кэш заказов
CUSTOMER_CACHE_TTL=600       # Кэш клиентов

# Настройки повторных попыток
MAX_RETRIES=3                # Максимальное количество попыток
INITIAL_RETRY_DELAY=300      # Начальная задержка перед повторной попыткой (мс)
MAX_RETRY_DELAY=10000        # Максимальная задержка между попытками (мс)

# Настройки логирования
LOG_FORMAT=json              # Формат логов (json или simple)
LOG_FILE=logs/app.log        # Путь к файлу логов (опционально)
